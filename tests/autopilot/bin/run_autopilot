#!/usr/bin/env python

import sys
import junitxml
from unittest.loader import TestLoader
from unittest.runner import TextTestRunner

if __name__ == "__main__":
	r_file = open('test-result.xml','w')
	loader = TestLoader()
	result = junitxml.JUnitXmlResult(r_file)
	result.startTestRun()
	test_suite = loader.discover('autopilot.tests')
	test_suite.run(result)
	result.stopTestRun()
	r_file.close()
